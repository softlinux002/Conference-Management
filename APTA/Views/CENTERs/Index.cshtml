@*@model IEnumerable<APTA.Models.CENTER>*@
@model IEnumerable<APTA.Models.viewmodel.CenterViewModel>
@{
    ViewBag.Title = "List All Centers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List All Centers</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Location)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (item.IsDeleted == false)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.LocationID }) |
                    @Html.ActionLink("Details", "Details", new { id = item.LocationID }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.LocationID })
                </td>
            </tr>
        }
    }

</table>
